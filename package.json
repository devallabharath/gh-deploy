{
  "name": "gh-deploy",
  "displayName": "GH-Deploy",
  "description": "git hub pages deploy",
  "publisher": "devalla",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gh-deploy.deploy",
        "category": "GH-Pages",
        "title": "Deploy",
        "icon": "$(server)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "gh-deploy.deploy",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "GH Deploy",
      "properties": {
        "gh-deploy.defaultToBranch": {
          "title": "Default Branch: 'To'",
          "type": "string",
          "default": "website",
          "markdownDescription": "Default remote branch to deploy"
        },
        "gh-deploy.defaultFromBranch": {
          "title": "Default Branch: 'From'",
          "type": "string",
          "default": "main",
          "markdownDescription": "Default local branch to deploy from"
        },
        "gh-deploy.defaultFolder": {
          "type": "string",
          "default": "build",
          "markdownDescription": "Default 'Folder' to deploy"
        },
        "gh-deploy.defaultCommitMessage": {
          "type": "string",
          "default": "update",
          "markdownDescription": "Default commit message for fallback"
        },
        "gh-deploy.defaultPreTask": {
          "type": "string",
          "default": "npm run build",
          "markdownDescription": "Default task to run before deploying. Leave empty for skip..."
        },
        "gh-deploy.silentDeploy": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable / Disable verbose logging"
        }
      }
    }
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {}
}
